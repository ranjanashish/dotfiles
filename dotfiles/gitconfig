[core]
    editor = vim
    pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
[credential]
    helper = cache --timeout=14400
[diff]
    tool = meld
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[interactive]
    diffFilter = delta --color-only
[merge]
    tool = meld
[pull]
    rebase = false
